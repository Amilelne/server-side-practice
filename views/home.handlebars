<div class="container">
  <h1 class="text-center my-5">weight records</h1>
  <div class="row ">
    {{#each records}}
      <div class="card mr-2 mb-2 col-lg-3 col-md-5 col-sm-10"
           style="width:18rem">
        <div class="card-body">
          <h5 class="card-title">{{formatDate date day="numeric" month="long" year="numeric"}}</h5>
          <p class="card-text">weight: {{weight}}kg</p>
        </div>
      </div>
    {{/each}}
  </div>

</div>